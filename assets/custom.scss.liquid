	box-sizing: border-box;
}



body {
	background: #fff;
	padding: 0;
	margin: 0;
	.hidden-count {
		display: none;
	}
	.owerlay {
		position: fixed;
		width: 100%;
		height: 100%;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		background: #000;
		opacity: 0;
		visibility: hidden;
		z-index: 40;
	}
	.owerlay-show {
		opacity: 0.6;
		visibility: visible;
	}
	.contain {
		width: 100%;
		max-width: 1440px;
		height: 100%;
		margin: 0 auto;
		padding: 0 15px;
		.row {
			width: 100%;
			height: 100%;
			display: -webkit-flex;
			display: -moz-flex;
			display: -ms-flex;
			display: -o-flex;
			display: flex;
			flex-direction: row;
			padding: 0 -15px;
		}
		.df {
			display: flex;
		}
		.fww {
			flex-wrap: wrap;
		}
		.jcsb {
			justify-content: space-between;
		}
		.jcsa {
			justify-content: space-around;
		}
		.jcc {
			justify-content: center;
		}
		.aic {
			align-items: center;
		}
		.fdr {
			flex-direction: row;
		}
