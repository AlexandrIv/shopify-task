				&:last-of-type {
					&:after {
						content:"";
						position: absolute;
						height: auto;
						width: 0;
						right: 100%;
						top: 0;
						bottom: 0;
						border: 50px solid transparent;
						border-right: 50px solid #d9bf8f;
						@media only screen and (max-width : 1200px) {
							display: none;
						}
					}
				}
				&:nth-child(2) {
					background: #000!important;
					z-index: 2;
					.before {
						@media only screen and (max-width : 1200px) {
							display: none;
						}
						&:after {
							content: "";
							position: absolute;
							width: 0;
							height: 0;
							bottom: 0;
							left: -50px;
							border-bottom: 50px solid #000;
							border-left: 50px solid transparent;
						}
						&:before {
							content: "";
							position: absolute;
							width: 0;
							height: 0;
							top: 0;
							left: -50px;
							border-top: 50px solid #000;
							border-left: 50px solid transparent;
						}
					}
					.after {
						@media only screen and (max-width : 1200px) {
							display: none;
						}
						&:after {
							content: "";
							position: absolute;
							width: 0;
							height: 0;
							bottom: 0;
							right: -50px;
							border-bottom: 50px solid #000;
							border-right: 50px solid transparent;
						}
						&:before {
							content: "";
							position: absolute;
							width: 0;
							height: 0;
							top: 0;
							right: -50px;
							border-top: 50px solid #000;
							border-right: 50px solid transparent;
						}
					}
				}
				&:first-of-type {
					&:after {
						content:"";
						position: absolute;
						height: auto;
						width: 0;
						left: 100%;
						top: 0;
						bottom: 0;
						border: 50px solid transparent;
						border-left: 50px solid #d9bf8f;
						@media only screen and (max-width : 1200px) {
							display: none;
						}
					}
				}
			}
		}
	}
