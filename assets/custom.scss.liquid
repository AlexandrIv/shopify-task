@mixin section-title() {
	padding: 100px 0;
	text-align: center;
	display: flex;
	width: 100%;
	height: auto;
	justify-content: center;
	position: relative;
	align-items: center;
	&:before {
		content:"";
		height: 1px;
		background: #eaeaea;
		width: 30%;
		position: absolute;
		left: 0;
	}
	&:after {
		content:"";
		height: 1px;
		background: #eaeaea;
		width: 30%;
		position: absolute;
		right: 0;
	}
	h2 {
		height: 100%;
		width: auto;
		align-items: center;
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		span {
			color: #000;
			font-size: 30px;
			line-height: 18px;
			padding: 0 100px;
			font-family: PlayfairDisplay-BoldItalic, sans-serif;
		}
		&:before {
			content:"\25C6";
			font-size: 28px;
			color: #d9bf8f;
		}
		&:after {
			content:"\25C6";
			font-size: 28px;
			color: #d9bf8f;
		}
	}
}

@mixin padding-top() {
	.pt-1 {
		padding-top: 10px;
	}
	.pt-2 {
		padding-top: 20px;
	}
	.pt-3 {
		padding-top: 30px;
	}
	.pt-4 {
		padding-top: 40px;
	}
	.pt-5 {
		padding-top: 50px;
	}
}

@mixin padding-bottom() {
	.pb-1 {
		padding-bottom: 10px;
	}
	.pb-2 {
		padding-bottom: 20px;
	}
	.pb-3 {
		padding-bottom: 30px;
	}
	.pb-4 {
		padding-bottom: 40px;
	}
	.pb-5 {
		padding-bottom: 50px;
	}
}

/* End Mixins */



