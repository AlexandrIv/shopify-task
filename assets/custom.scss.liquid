			display: inline-block;
			cursor: pointer;
			z-index: 100;
			@media only screen and (min-width : 768px) {
				display: none;
			}
			.bar1, .bar2, .bar3 {
				width: 35px;
				height: 5px;
				background-color: #333;
				margin: 6px 0;
				transition: 0.4s;
			}
		}
		.change {
			position: fixed;
			right: 20px;
			.bar1 {
				-webkit-transform: rotate(-45deg) translate(-9px, 6px);
				transform: rotate(-45deg) translate(-9px, 6px);
			}
			.bar1, .bar2, .bar3 {
				background-color: #fff;
			}
		}
		.change {
			.bar2 {
				opacity: 0;
			}
		}
		.change {
			.bar3 {
				-webkit-transform: rotate(45deg) translate(-8px, -8px);
				transform: rotate(45deg) translate(-8px, -8px);
			}
		}

	}
}
.mmenu {
	position: absolute;
	visibility: hidden;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	width: 100%;
	height: 100vh;
	opacity: 0;
	transition: 0.6s;
	background-color: transparent;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	ul {
		transition: 0.6s;
		transform: translateY(-100px);
		list-style-type: none;
		li {
			text-align: center;
			padding: 15px 0;
			a {
				font-size: 28px;
				color: #fff;
				text-decoration: none;
			}
		}
	}
}
.show-menu {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	width: 100%;
	height: 100vh;
	opacity: 0.9;
	visibility: visible;
	background-color: #d9bf8f;
	transition: 0.6s;
	z-index: 50;
	ul {
		transition: 0.6s;
		transform: translateY(0);
	}
}

.cart-popup {
	position: absolute;
	width: 40%;
	height: 500px;
	opacity: 0;
	visibility: hidden;
	background-color: transparent;
	transition: 0.6s;
}

.show-popup {
	position: fixed;
	opacity: 1;
	visibility: visible;
	transition: 0.6s;
	background-color: #fff;
	z-index: 50;
}

.slideshow {
	.slider {
		.slide {
			position: relative;
			.owerlay {
				position: absolute;
				top: 0;
				bottom: 0;
				left: 0;
				right: 0;
				opacity: 0.3;
				background-color: #000;
				z-index: 10;
			}
		}
		.slick-dots {
			bottom: 15px;
			z-index: 1;
			li {
				margin: 0 10px;
				button {
					&:before {
						opacity: 0.9;
						height: 20px;
						width: 20px;
						color: transparent;
						background-color: #d9bf8f;

						/* Rotate */
						-webkit-transform: rotate(-45deg);
						-moz-transform: rotate(-45deg);
						-ms-transform: rotate(-45deg);
						-o-transform: rotate(-45deg);
						transform: rotate(-45deg);
						/* Rotate Origin */
						-webkit-transform-origin: 0 100%;
						-moz-transform-origin: 0 100%;
						-ms-transform-origin: 0 100%;
						-o-transform-origin: 0 100%;
						transform-origin: 0 100%;
					}
				}
			}
			.slick-active {
				button {
					&:before {
						opacity: 1;
						background-color: #000000;
					}
				}
			}
		}
	}
}




