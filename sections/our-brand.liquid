<section class="our-brand-section">
	<div class="contain">
		<div class="row">
			<div class="section-title">
				<h2><span>Our Brand</span></h2>
			</div>
		</div>
		<div class="row jcsb aic fww brands-block">
			{% for block in section.blocks %}
			{%- assign image = block.settings.img -%}
			{%- assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
				<div class="brand-box">
					<a href="{{ block.settings.link }}">
						<img src="{{ image | img_url: '250x' }}" alt="{{ image.alt | escape }}" style="width: 100%;">
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
</section>

{% schema %}
{
	"name": {
		"en": "Our Brand"
	},
	"class": "our-brand",
	"max_blocks": 6,
	"presets": [
		{
			"name": {
				"en": "Our Brand"
			},
			"category": {
				"en": "Sections"
			}
		}
	],
	"blocks": [
		{
			"type": "image-brand",
			"name": {
				"en": "Banner"
			},
			"settings": [
				{
					"type": "image_picker",
					"id": "img",
					"label": {
					"en": "Brand image"
					},
					"info": {
						"en": "1000 x 500px recommended"
					}
				},
				{
					"type": "url",
					"id": "link",
					"label": {
						"en": "Link URL"
					}
				}
			]
		}
	]
}
{% endschema %}