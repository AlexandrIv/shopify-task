{
	"name": {
		"en": "Hand Picked"
	},
	"class": "handpicked-section",
	"max_blocks": 5,
	"presets": [
		{
			"name": {
				"en": "Hand Picked"
			},
			"category": {
				"en": "Sections"
			},
			"blocks": [
				{
					"type": "collection"
				},
				{
